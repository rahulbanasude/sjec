    <!-- Right-sided navbar links -->
    <div class="w3-right w3-hide-small">
      <a href="/" class="w3-bar-item w3-button">HOME</a>
      <a href="/home/about" class="w3-bar-item w3-button"><i class="fa fa-user"></i> ABOUT</a>
